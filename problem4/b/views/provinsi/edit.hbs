{{#> layout title=title}}
        <div class="row">
          <h3>Tambah data Provinsi</h3>
          <hr />
        </div>
        {{#with data}}
        <div class="row">
          <form method="POST" action="/provinsi/{{id}}/edit?_method=PUT" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="nama" class="form-label">Nama</label>
              <input
                type="text"
                class="form-control"
                id="nama"
                name="nama"
                value="{{nama}}"
                placeholder="Masukkan nama provinsi"
              />
            </div>
            <div class="mb-3">
              <label for="diresmikan" class="form-label">Diresmikan</label>
              <input type="date" class="form-control" id="diresmikan" name="diresmikan" value="{{diresmikan}}"/>
            </div>
            <div class="mb-3">
              <label for="photo" class="form-label">Upload Photo</label>
              <input class="form-control" type="file" id="image" name="image" />
              <input type="hidden" value="{{photo}}" name="image_old"/>
            <div>
                <img id="preview" src="/assets/images/{{photo}}" alt="image preview" class="img-thumbnail" style="max-height: 300px;">
            </div>
            </div>
            <div class="mb-3">
              <label for="namaPulau" class="form-label">Nama Pulau</label>
              <input
                type="text"
                class="form-control"
                id="namaPulau"
                name="pulau"
                value="{{pulau}}"
                placeholder="Masukkan nama pulau"
              />
            </div>
            <input type="hidden" name="user_id" value="1"/>
            <input type="hidden" name="id" value="{{id}}"/>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          {{/with}}
        </div>
        <script src="/assets/js/image-preview.js" type="text/javascript"></script>
{{/layout}}